# $NetBSD$

machine 	evbarm64 aarch64
maxpartitions	16

include 	"arch/evbarm64/conf/std.evbarm64"

# Pull in Raspberry Pi config definitions.
include "arch/evbarm64/conf/files.rpi"

options 	AARCH64_HAVE_L2CTLR	# L2CTLR_EL1 register implemented

options 	FDT				# Flattened Device Tree support
options 	DRAM_BLOCKS=256
options 	EVBARM_BOARDTYPE="rpi"
makeoptions	BOARDMKFRAG="${THISA64}/conf/mk.rpi"
makeoptions	LOADADDRESS="0x0000000000080000"
makeoptions	TEXTADDR=   "0xffffffc000080000"

options 	ARM_INTR_IMPL="<arch/arm/fdt/fdt_intr.h>"
options 	ARM_GENERIC_TODR
